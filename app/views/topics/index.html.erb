<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Description</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.latitude %></td>
        <td><%= topic.longitude %></td>
        <td><%= topic.address %></td>
        <td><%= topic.description %></td>
        <td><%= topic.title %></td>
        <td><%= link_to 'Show', topic %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<script>
  current_location = getLocation();
  buildMap(<%=raw nil.to_json %>);


  var me_marker = [
    { lat: current_location.lat(), lng: current_location.lng(), infowindow: "dsd", marker_title: "bike_point" }
  ];

  var markers = handler.addMarkers(me_marker);


  function loadNearPlaces(point) {
    $.ajax({
      dataType: 'JSON',
      url: '/topics/my_location',
      data:{
        my_location: {
          latitude: point.lat(),
          longitude: point.lng(),
          range: 20
        }
      },
      type: "POST",
      success: function (data) {
        handler.addMarkers(data);
        handler.bounds.extendWith(data)
        handler.fitMapToBounds()
      },
      error: function() {
        console.log('oops')
      }
    });
  }

  function newTopic(current_location) {
    $.ajax({
        url: '/topics',
        data:{
          topic: {
            latitude: current_location.lat(),
            longitude: current_location.lng(),
            title: 'New location'
          }
        },
        type: "POST",
        success: function () {
          console.log('ok');
        },
        error: function() {
          console.log('oops')
        }
    });
  }

</script>

